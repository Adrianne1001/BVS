@using BogsyVideoStore.ViewModels
@model HomeViewModel

<link rel="stylesheet" href="~/css/styles.css" asp-append-version="true" />
<link rel="stylesheet" href="~/css/main.css" asp-append-version="true" />
<link href="https://fonts.googleapis.com/icon?family=Material+Icons+Sharp" rel="stylesheet" />

<style>
    .dashboard-header {
        margin-bottom: 2rem;
    }

    .dashboard-header h1 {
        font-size: 2.5rem;
        font-weight: 600;
        color: #2c3e50;
        margin: 0;
        letter-spacing: -0.5px;
    }

    .dashboard-header p {
        color: #7f8c8d;
        margin: 0.5rem 0 0 0;
        font-size: 0.95rem;
    }

    .insights {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 1.5rem;
        margin-bottom: 2rem;
    }

    .insights > div {
        background: white;
        padding: 1.5rem;
        border-radius: 12px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
        border: 1px solid rgba(0, 0, 0, 0.05);
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        gap: 1.5rem;
    }

    .insights > div:hover {
        box-shadow: 0 6px 16px rgba(0, 0, 0, 0.12);
        transform: translateY(-2px);
    }

    .insights > div span {
        font-size: 2.5rem;
        width: 60px;
        height: 60px;
        border-radius: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        flex-shrink: 0;
    }

    .sales span {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    }

    .expenses span {
        background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
    }

    .income span {
        background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
    }

    .insights .middle {
        flex: 1;
    }

    .insights .left h3 {
        color: #7f8c8d;
        font-size: 0.9rem;
        font-weight: 500;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        margin: 0 0 0.5rem 0;
    }

    .insights .left h1 {
        color: #2c3e50;
        font-size: 2rem;
        font-weight: 700;
        margin: 0;
    }

    .recent-orders {
        background: white;
        padding: 2rem;
        border-radius: 12px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
        border: 1px solid rgba(0, 0, 0, 0.05);
    }

    .recent-orders-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 1.5rem;
        padding-bottom: 1rem;
        border-bottom: 2px solid #ecf0f1;
    }

    .recent-orders h2 {
        color: #2c3e50;
        font-size: 1.4rem;
        font-weight: 600;
        margin: 0;
    }

    .recent-orders table {
        width: 100%;
        border-collapse: collapse;
    }

    .recent-orders table thead {
        background: #f8f9fa;
    }

    .recent-orders table th {
        color: #7f8c8d;
        font-weight: 600;
        padding: 1rem;
        text-align: left;
        font-size: 0.9rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        border-bottom: 2px solid #ecf0f1;
    }

    .recent-orders table tbody tr {
        border-bottom: 1px solid #ecf0f1;
        transition: background-color 0.2s ease;
    }

    .recent-orders table tbody tr:hover {
        background-color: #f8f9fa;
    }

    .recent-orders table td {
        color: #2c3e50;
        padding: 1rem;
        font-size: 0.95rem;
    }

    .recent-orders table td:first-child {
        font-weight: 500;
    }

    .show-all-link {
        display: inline-block;
        margin-top: 1.5rem;
        padding: 0.75rem 1.5rem;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        text-decoration: none;
        border-radius: 8px;
        font-weight: 500;
        transition: all 0.3s ease;
        border: none;
        cursor: pointer;
    }

    .show-all-link:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 16px rgba(102, 126, 234, 0.4);
    }

    .empty-state {
        text-align: center;
        padding: 2rem;
        color: #7f8c8d;
    }

    .empty-state span {
        font-size: 3rem;
        display: block;
        margin-bottom: 1rem;
        color: #bdc3c7;
    }

    @@media (max-width: 768px) {
        .dashboard-header h1 {
            font-size: 1.8rem;
        }

        .insights {
            grid-template-columns: 1fr;
        }

        .recent-orders {
            padding: 1rem;
        }

        .recent-orders table {
            font-size: 0.85rem;
        }

        .recent-orders table th,
        .recent-orders table td {
            padding: 0.75rem 0.5rem;
        }
    }
</style>

<section id="content">
    <main>
        <div class="dashboard-header">
            <h1>Dashboard</h1>
            <p>Welcome back! Here's an overview of your video store</p>
        </div>

        <div class="insights">
            <div class="sales">
                <span class="material-icons-sharp">people</span>
                <div class="middle">
                    <div class="left">
                        <h3>Total Customers</h3>
                        <h1>@Model.TotalRegisteredCustomers</h1>
                    </div>
                </div>
            </div>

            <div class="expenses">
                <span class="material-icons-sharp">local_movies</span>
                <div class="middle">
                    <div class="left">
                        <h3>Total Video Stock</h3>
                        <h1>@Model.TotalVideoStocks</h1>
                    </div>
                </div>
            </div>

            <div class="income">
                <span class="material-icons-sharp">inventory</span>
                <div class="middle">
                    <div class="left">
                        <h3>Available Videos</h3>
                        <h1>@Model.TotalVideoAvailable</h1>
                    </div>
                </div>
            </div>
        </div>

        <div class="recent-orders">
            <div class="recent-orders-header">
                <h2>Recent Rentals</h2>
            </div>

            @if (Model.Rentals != null && Model.Rentals.Any())
            {
                <table>
                    <thead>
                        <tr>
                            <th>Video Title</th>
                            <th>Customer Name</th>
                            <th>Qty</th>
                            <th>Date Rented</th>
                            <th>Duration</th>
                            <th>Due Date</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Rentals.Take(10))
                        {
                            <tr>
                                <td>@(item.Video?.Title ?? "N/A")</td>
                                <td>@(item.Customer?.Name ?? "N/A")</td>
                                <td>@item.QtyRented</td>
                                <td>@item.DateRented.ToString("MMM dd, yyyy")</td>
                                <td>@(item.Video != null ? item.Video.rentDuration.ToString() : "N/A")</td>
                                <td>@item.RentDueDate.ToString("MMM dd, yyyy")</td>
                            </tr>
                        }
                    </tbody>
                </table>
                <a asp-controller="Rental" asp-action="Index" class="show-all-link">View All Rentals →</a>
            }
            else
            {
                <div class="empty-state">
                    <span class="material-icons-sharp">movie_filter</span>
                    <p>No recent rentals to display</p>
                </div>
            }
        </div>
    </main>
</section>