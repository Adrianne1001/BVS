@using BogsyVideoStore.Data.Enum
@using BogsyVideoStore.ViewModels
@model EditVideoViewModel


<link rel="stylesheet" href="~/css/FormCss.css" asp-append-version="true" />
<section id="content">
	<!-- MAIN STARTS-->
	<main class="registration">
		<div class="container">
			<header>Edit Video</header>
			<form method="post" asp-action="Edit" class="form">
				<div class="column">
					<div class="input-box">
						<label asp-for="Title">Title</label>
						<input asp-for="Title" class="form-control" placeholder="Enter Title">
						<span asp-validation-for="Title" class="text-danger"></span>
					</div>
					
					<div class="input-box">
						 <label asp-for="QtyTotal">Total Stocks</label>
						<input asp-for="QtyTotal" class="form-control" placeholder="Enter Total Quantity">
						<span asp-validation-for="QtyTotal" class="text-danger"></span>
					</div>
					
				</div>
				<div class="column">
					<div class="input-box">
						<label asp-for="VideoType">Video Category</label>
						 <select asp-for="VideoType" asp-items="@Html.GetEnumSelectList<VideoType>()" class="form-control">
							  <option>--Video Type--</option>
						 </select>
						 <span asp-validation-for="VideoType" class="text-danger"></span>
					</div>

					<div class="input-box">
						<label asp-for="Genre">Genre</label>
						 <select asp-for="Genre" asp-items="@Html.GetEnumSelectList<Genre>()" class="form-control">
							  <option>--Genre--</option>
						 </select>
						 <span asp-validation-for="Genre" class="text-danger"></span>
					</div>

					<div class="input-box">
						 <label asp-for="RentDuration">Rent Limit </label>
						 <select asp-for="RentDuration" asp-items="@Html.GetEnumSelectList<RentDuration>()" class="form-control">
							  <option>--Rent Limit (Days) --</option>
						 </select>
						 <span asp-validation-for="RentDuration" class="text-danger"></span>
					</div>
				</div>
				<div class="column">
					<button style="background-color: grey;" asp-action="Index">Go back to the previous page</button>
					<button type="submit" value="Save">Save</button>
				</div>
			</form>
		</div>
	</main>
</section>