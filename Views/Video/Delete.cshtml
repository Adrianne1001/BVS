@using BogsyVideoStore.Data.Enum
@model Video


<link rel="stylesheet" href="~/css/FormCss.css" asp-append-version="true" />
<section id="content">
	<!-- MAIN STARTS-->
	<main class="registration">
		<div class="container">
			<header>Delete Video</header>
			<form method="post" asp-action="Delete" class="form">
				<div class="column">
					<div class="input-box">
						<label asp-for="Title">Title</label>
						<input asp-for="Title" class="form-control" placeholder="Enter Title" readonly>
						<span asp-validation-for="Title" class="text-danger"></span>
					</div>
					
					<div class="input-box">
						 <label asp-for="QtyTotal">Total Stocks</label>
						<input asp-for="QtyTotal" class="form-control" placeholder="Enter Total Quantity" readonly>
						<span asp-validation-for="QtyTotal" class="text-danger"></span>
					</div>
					
				</div>
				<div class="column">
					<div class="input-box">
						<label asp-for="VideoType">Video Category</label>
						 <select asp-for="VideoType" asp-items="@Html.GetEnumSelectList<VideoType>()" class="form-control" disabled>
							  <option>--Video Type--</option>
						 </select>
						 <span asp-validation-for="VideoType" class="text-danger"></span>
					</div>

					<div class="input-box">
						<label asp-for="Genre">Genre</label>
						 <select asp-for="Genre" asp-items="@Html.GetEnumSelectList<Genre>()" class="form-control" disabled>
							  <option>--Genre--</option>
						 </select>
						 <span asp-validation-for="Genre" class="text-danger"></span>
					</div>

					<div class="input-box">
						 <label asp-for="rentDuration">Rent Limit </label>
						 <select asp-for="rentDuration" asp-items="@Html.GetEnumSelectList<RentDuration>()" class="form-control" disabled>
							  <option>--Rent Limit (Days) --</option>
						 </select>
						 <span asp-validation-for="rentDuration" class="text-danger"></span>
					</div>
				</div>
				<div class="column">
					<button style="background-color: grey;" asp-action="Index">Go back to the previous page</button>
					<button type="submit" style="background-color: red;" value="Save">Delete</button>
				</div>
			</form>
		</div>
	</main>
</section>